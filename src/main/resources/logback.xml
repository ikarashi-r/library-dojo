<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>
	<!-- コンソール出力の設定 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	 </appender>

	<!-- ファイル出力の設定 -->
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>logback-fuga.log</file>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>[%d] %c %m%n</pattern>
		</encoder>
	</appender>

	<!-- クラスごとにログレベルを指定 -->
	<logger name="logback.practice2.Hoge" level="trace" />

	<!-- クラスごとに出力形式を指定 -->
	<logger name="logback.practice2.Fuga" level="info" additivity="false">
		<appender-ref ref="FILE" />
	</logger>

	<!-- ルートロガーの設定 -->
 	<root>
 		<appender-ref ref="STDOUT" />
	</root>
</configuration>